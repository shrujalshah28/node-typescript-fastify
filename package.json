{
  "name": "node-typescript-fastify",
  "version": "0.0.4",
  "description": "A minimalist TypeScript Fastify boilerplate",
  "keywords": [
    "TypeScript",
    "Fastify",
    "nodejs",
    "boilerplate",
    "eslint"
  ],
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "pm2 start node-typescript-fastify.json",
    "stop": "pm2 stop node-typescript-fastify.json",
    "restart": "pm2 startOrRestart node-typescript-fastify.json --update-env",
    "reload": "pm2 startOrReload node-typescript-fastify.json --update-env",
    "dev": "nodemon",
    "ts-node": "node --harmony-top-level-await --loader ts-node/esm/transpile-only --experimental-specifier-resolution=node src/server.ts",
    "lint": "npm run eslint && npm run prettier",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "eslint \"src/**/*.ts\"",
    "eslint:fix": "eslint \"src/**/*.ts\" --fix",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prebuild": "rimraf dist/*",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "preversion": "npm run build:check",
    "version": "standard-version",
    "postversion": "git push && git push --tags",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "envalid": "^7.1.0",
    "fastify": "^3.29.4",
    "fastify-compress": "^3.4.2",
    "fastify-cookie": "^5.3.0",
    "fastify-cors": "^5.2.0",
    "fastify-helmet": "^5.3.1",
    "fastify-plugin": "^3.0.0",
    "pm2": "^4.5.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.2.0",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shrujalshah28/node-typescript-fastify.git"
  },
  "bugs": {
    "url": "https://github.com/shrujalshah28/node-typescript-fastify/issues"
  },
  "homepage": "https://github.com/shrujalshah28/node-typescript-fastify#readme",
  "author": "Shrujal Shah <shrujal@peerbits.com>",
  "license": "MIT"
}
